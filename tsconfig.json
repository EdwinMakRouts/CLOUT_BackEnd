{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "build",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "esModuleInterop": true
  },
  "exclude": ["node_modules", "build", "tests", "uploads"]
}
